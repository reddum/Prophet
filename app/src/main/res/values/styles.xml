<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="PagerTabStripText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="Base.Theme.Design.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#607d8b</item>
        <item name="colorPrimaryDark">#455a64</item>
        <item name="colorAccent">#FF4081</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="Base.Theme.Design" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#607d8b</item>
        <item name="colorPrimaryDark">#455a64</item>
        <item name="colorAccent">#FF4081</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:actionBarStyle">@style/ThemeOverlay.AppCompat.ActionBar</item>
    </style>

</resources>
